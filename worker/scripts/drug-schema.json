{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "DrugData",
    "type": "object",
    "required": [
      "drugName",
      "indications",
      "contraindications",
      "dosing",
      "warnings",
      "manufacturer"
    ],
    "properties": {
      "drugName": {
        "type": "string",
        "description": "The name of the drug (brand or generic)."
      },
      "indications": {
        "type": "array",
        "description": "Approved uses or conditions the drug treats.",
        "items": {
          "type": "string"
        }
      },
      "contraindications": {
        "type": "array",
        "description": "Conditions or factors that serve as reasons to not use the drug.",
        "items": {
          "type": "string"
        }
      },
      "dosing": {
        "type": "array",
        "description": "Dosing instructions, potentially based on condition or age group.",
        "items": {
          "type": "object",
          "required": ["group", "amount", "frequency", "route"],
          "properties": {
            "group": {
              "type": "string",
              "description": "Target population or condition (e.g., adults, pediatrics, renal impairment)."
            },
            "amount": {
              "type": "string",
              "description": "Dose amount (e.g., 500mg)"
            },
            "frequency": {
              "type": "string",
              "description": "How often the drug should be taken (e.g., twice daily)"
            },
            "route": {
              "type": "string",
              "description": "Route of administration (e.g., oral, IV)"
            }
          }
        }
      },
      "warnings": {
        "type": "array",
        "description": "Important warnings about the drug, including black-box warnings.",
        "items": {
          "type": "string"
        }
      },
      "manufacturer": {
        "type": "string",
        "description": "The company that manufactures the drug."
      },
      "sideEffects": {
        "type": "array",
        "description": "Known side effects of the drug.",
        "items": {
          "type": "string"
        }
      },
      "interactions": {
        "type": "array",
        "description": "Known drug or substance interactions.",
        "items": {
          "type": "string"
        }
      },
      "approvalDate": {
        "type": "string",
        "format": "date",
        "description": "Date the drug was approved (e.g., FDA approval date)."
      },
      "rxNormCode": {
        "type": "string",
        "pattern": "^[0-9]{4,8}$",
        "description": "RxNorm Concept Unique Identifier (RxCUI)."
      },
      "ndcCode": {
        "type": "string",
        "pattern": "^[0-9]{4,5}-[0-9]{3,4}-[0-9]{1,2}$",
        "description": "National Drug Code in 10-digit format (e.g., 12345-6789-01)."
      },
      "atcCode": {
        "type": "string",
        "pattern": "^[A-Z][0-9]{2}[A-Z]{2}[0-9]{2}$",
        "description": "Anatomical Therapeutic Chemical (ATC) classification code."
      },
      "emaId": {
        "type": "string",
        "description": "European Medicines Agency identifier (optional)."
      }
    },
    "additionalProperties": false
  }
  